<h1><%= @cocktail.name %></h1>

<ol>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> of <%= dose.ingredient.name %>
      <%= link_to 'Delete dose', dose_path(dose), method: :delete %>
    </li>
  <% end %>
</ol>

<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
<%= link_to 'Back to cocktails', root_path %>


.class


